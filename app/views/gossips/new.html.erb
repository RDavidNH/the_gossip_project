<div class="container">
  <div class="row">
    <div class="col-sm-12">
    
      <% if @new_gossip.errors.any? %>
        <div class="alert alert-danger" role="alert">
          <p>Nous n'avons pas réussi à créer le potin pour la (ou les) raison(s) suivante(s) :</p>
          <ul>
            <% @new_gossip.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>
    
      <h1>Nouveau gossip!</h1>
      
      <%= form_tag url_for(action: 'create'), method: "post" do %>

      <%= label_tag 'Titre' %>
      <%= text_field_tag 'gossip_title', @new_gossip.title, :class => 'form-control' %>
      <br /> 

      <%= label_tag 'Contenu' %>
      <%= text_area_tag 'gossip_content', @new_gossip.content, :class => 'form-control' %>
      <br /> 

      <%= submit_tag "Créer" %>

      <% end %>
    
    </div>
  </div>
</div>
